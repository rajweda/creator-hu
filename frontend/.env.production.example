# Creator Hub Frontend - Production Environment Configuration Template
# Copy this file to .env.production and update the values for your production deployment

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (REQUIRED)
# This should point to your deployed backend service
# Examples:
# - Railway: https://your-backend-app.railway.app
# - Render: https://your-backend-app.onrender.com
# - Heroku: https://your-backend-app.herokuapp.com
# - Custom domain: https://api.yourapp.com
VITE_API_URL=https://your-backend-api-url.com

# API timeout in milliseconds (default: 10000 = 10 seconds)
VITE_API_TIMEOUT=10000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name (displayed in browser title and meta tags)
VITE_APP_NAME=Creator Hub

# Application description (for meta tags and SEO)
VITE_APP_DESCRIPTION=A platform for content creators to share and monetize their work

# Application version (automatically populated from package.json if not set)
# VITE_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features in production
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable debug mode (should be false in production)
VITE_DEBUG_MODE=false

# Enable development tools (should be false in production)
VITE_ENABLE_DEV_TOOLS=false

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Analytics 4 Measurement ID
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Hotjar Site ID for user analytics
# VITE_HOTJAR_SITE_ID=1234567

# Intercom App ID for customer support
# VITE_INTERCOM_APP_ID=your-intercom-app-id

# =============================================================================
# SOCIAL MEDIA & SHARING
# =============================================================================

# Social media links (for footer and sharing)
VITE_SOCIAL_TWITTER=https://twitter.com/yourapp
VITE_SOCIAL_FACEBOOK=https://facebook.com/yourapp
VITE_SOCIAL_INSTAGRAM=https://instagram.com/yourapp
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/yourapp

# =============================================================================
# SEO & META TAGS
# =============================================================================

# Default meta tags for SEO
VITE_META_KEYWORDS=creator,content,video,community,platform
VITE_META_AUTHOR=Your Company Name

# Open Graph meta tags
VITE_OG_TITLE=Creator Hub - Content Creator Platform
VITE_OG_DESCRIPTION=Join our community of content creators and share your passion
VITE_OG_IMAGE=https://your-domain.com/og-image.jpg
VITE_OG_URL=https://your-domain.com

# Twitter Card meta tags
VITE_TWITTER_CARD=summary_large_image
VITE_TWITTER_SITE=@yourapp
VITE_TWITTER_CREATOR=@yourapp

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Enable service worker for caching (PWA)
VITE_ENABLE_SERVICE_WORKER=true

# Enable lazy loading for images and components
VITE_ENABLE_LAZY_LOADING=true

# Maximum file size for client-side uploads (in bytes)
# 10MB = 10485760 bytes
VITE_MAX_UPLOAD_SIZE=10485760

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable theme switching
VITE_ENABLE_THEME_SWITCH=true

# Default language/locale
VITE_DEFAULT_LOCALE=en

# Available languages (comma-separated)
VITE_AVAILABLE_LOCALES=en,es,fr,de

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy (CSP) settings
VITE_CSP_REPORT_URI=https://your-domain.com/csp-report

# Enable HTTPS redirect (handled by hosting platform usually)
VITE_FORCE_HTTPS=true

# =============================================================================
# PAYMENT & MONETIZATION (Optional)
# =============================================================================

# Stripe publishable key (for payments)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...

# PayPal client ID
# VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# =============================================================================
# PLATFORM-SPECIFIC CONFIGURATIONS
# =============================================================================

# Vercel-specific
# VITE_VERCEL_URL=https://your-app.vercel.app

# Netlify-specific
# VITE_NETLIFY_SITE_URL=https://your-app.netlify.app

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Mock API responses (only for development/testing)
# VITE_USE_MOCK_API=false

# Enable React DevTools (should be false in production)
# VITE_ENABLE_REACT_DEVTOOLS=false

# =============================================================================
# NOTES FOR DEPLOYMENT
# =============================================================================

# 1. VITE_ prefix is required for all environment variables in Vite
# 2. These variables are embedded in the build and visible to users
# 3. Never include sensitive data like API keys or secrets
# 4. Use different .env files for different environments
# 5. Validate required environment variables in your app startup
# 6. Consider using environment variable validation libraries
# 7. Document any custom variables your team adds
# 8. Test your production build locally before deploying
# 9. Use build-time environment variables for static values
# 10. Monitor your bundle size when adding new variables

# =============================================================================
# PLATFORM DEPLOYMENT EXAMPLES
# =============================================================================

# Vercel:
# Set these in your Vercel dashboard under Environment Variables

# Netlify:
# Set these in your Netlify dashboard under Site settings > Environment variables

# Railway:
# Set these in your Railway dashboard under Variables

# Render:
# Set these in your Render dashboard under Environment